<% if @experience.present? %>
  <div class="container mt-4">
    <div class="row">
      <div class="col-md-8 offset-md-2">
        <!-- Titre de l'expérience -->
        <h1 class="display-4 text-center"><%= @experience.name %></h1>

        <!-- Section photo de l'expérience -->
        <div class="text-center">
          <% if @experience.photo.attached? %>
            <%= image_tag @experience.photo, alt: "Image de l'expérience", class: "img-fluid rounded shadow-lg" %>
          <% else %>
            <p class="text-muted">Aucune photo disponible pour cette expérience.</p>
          <% end %>
        </div>

        <!-- Détails de l'expérience -->
        <div class="experience-details mt-4">
          <h3 class="h4">Détails</h3>
          <div class="card mb-3">
            <div class="card-body">
              <p><strong>Nom de scène :</strong> <%= @experience.stage_name %></p>
              <p><strong>Genre musical :</strong> <%= @experience.musical_genre %></p>
              <p><strong>Exigence absurde :</strong> <%= @experience.absurd_requirement %></p>
              <p><strong>Prix par jour :</strong> <%= @experience.price_per_day %> €</p>
            </div>
          </div>
        </div>

        <!-- Section retour à la page d'accueil -->
        <div class="text-center mt-4">
          <%= link_to 'Retour à l\'accueil', root_path, class: "btn btn-primary btn-lg" %>
        </div>
      </div>
    </div>
  </div>
<% end %>

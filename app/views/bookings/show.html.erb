<div class="row">
  <% if @booking.present? %>
    <div class="container mt-4">
      <div class="row">
        <div class="col-md-8 offset-md-2">
          <!-- Titre de l'expérience -->
          <h1 class="display-4 text-center"><%= @booking.experience.name %></h1>

          <!-- Section photo de l'expérience -->
          <div class="text-center">
            <% if @booking.experience.photo.attached? %>
              <%= image_tag @booking.experience.photo, alt: "Image de l'expérience", class: "img-fluid rounded shadow-lg", size: '400x400'%>
            <% else %>
              <p class="text-muted">Aucune photo disponible pour cette expérience.</p>
            <% end %>
          </div>

          <!-- Détails de l'expérience -->
          <div class="experience-details mt-4">
            <h4>Détails</h4>
            <div class="card mb-3">
              <div class="card-body">
                <p><strong>Nom de scène :</strong> <%= @booking.experience.stage_name %></p>
                <p><strong>Genre musical :</strong> <%=  @booking.experience.musical_genre %></p>
                <p><strong>Exigence absurde :</strong> <%=  @booking.experience.absurd_requirement %></p>
                <p><strong>Prix par jour :</strong> <%=  @booking.experience.price_per_day %> €</p>
              </div>
            </div>
          </div>

          <div class="experience-details mt-4">
            <h4>Votre réservation: </h4>
            <p><i class="fa-solid fa-calendar-days ms-5"></i> Du: <%= @booking.date_start %> Au: <%= @booking.date_end %></p>
          </div>

          <!-- Section retour à la page d'accueil -->
          <div class="text-center mt-4 mb-5">
            <%= link_to 'Retour à l\'accueil', root_path, class: "btn btn-primary btn-lg" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
